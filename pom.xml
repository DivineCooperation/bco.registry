<?xml version="1.0" encoding="UTF-8"?>
<project xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/POM/4.0.0" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
    <modelVersion>4.0.0</modelVersion>
    
    <prerequisites>
        <maven>3.0</maven>
    </prerequisites>
    
    <groupId>de.citec</groupId>
    <artifactId>dm</artifactId>
    <version>0.3.0-SNAPSHOT</version>
    <name>DeviceManager</name>
    <description>DeviceManager</description>
    
    <organization>
        <name>DC</name>
        <url>https://www.cit-ec.de</url>
    </organization>
    
    <scm>
        <developerConnection>scm:git:https://projects.cit-ec.uni-bielefeld.de/git/lsp-csra.device-manager.git</developerConnection>
        <url>https://projects.cit-ec.uni-bielefeld.de/git/lsp-csra.device-manager.git</url>
    </scm>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>
    
    
    <build>
        <plugins><!-- remove me after dist gen -->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>appassembler-maven-plugin</artifactId>
                <version>1.10</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>assemble</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <programs>
                        <program>
                            <mainClass>de.citec.dm.core.DeviceManager</mainClass>
                            <id>device-manager</id>
                            <platforms>
                                <platform>unix</platform>
                            </platforms>
                        </program>
                    </programs>
                </configuration>
            </plugin>
        </plugins>
    </build>    
    
    <packaging>pom</packaging>
    
    <modules>
        <module>lib</module>
        <module>core</module>
        <module>remote</module>
        <module>test</module>
    </modules>
    
    <dependencies>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>jul.exception</artifactId>
            <version>0.1.0-SNAPSHOT</version>
        </dependency>
        <dependency>
            <groupId>de.citec</groupId>
            <artifactId>jul.extension.rsb.com</artifactId>
            <version>0.1.0-SNAPSHOT</version>
        </dependency>
    </dependencies>
</project>
